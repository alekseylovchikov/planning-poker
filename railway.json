{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run build"
  },
  "deploy": {
    "startCommand": "node server-example.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100
  },
  "$variables": {
    "VITE_WS_URL": {
      "description": "WebSocket URL for the application. Should be set to wss://your-app.railway.app (without port)"
    }
  }
}
